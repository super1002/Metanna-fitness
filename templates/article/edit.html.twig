{% extends 'base.html.twig' %}

{% block title %}Editer un article
{% endblock %}


{% block body %}
	<div id="wrapper">
		{% include "layouts/partials/_sidebar.html.twig" %}
		<!-- Content Wrapper -->
		<div
			id="content-wrapper" class="d-flex flex-column">
			<!-- Main Content -->
			<div id="content" class="content">

				{% include "layouts/partials/_nav.html.twig" %}

				<div class="container mt-5 d-flex justify-content-center">
					<div class="row mt-5">
						<div class=" mx-auto">
							<div>
								<div class="row">
									<div class="col-xl-6 col-lg-6 col-md-12">
										{{form_start(form)}}
										<div class="form-group mb-3">
											{{form_label(form.label)}}
											{{form_widget(form.label)}}
										</div>
										<div class="form-group mb-3">
											{{form_label(form.category)}}
											{{form_widget(form.category)}}
										</div>
										<div class="row">
											<div class="form-group mb-3 col-xs-12 col-sm-6">
												{{form_label(form.price)}}
												<div class="input-group mb-3">
													{{form_widget(form.price)}}
													<span class="input-group-text" id="basic-addon1">XOF</span>
												</div>
											</div>
											<div class="form-group mb-3 col-xs-12 col-sm-6">
												{{form_label(form.stock)}}
												{{form_widget(form.stock)}}
											</div>
										</div>
										<div class="form-group mb-3">
											{{form_label(form.imageFileName)}}
											{{form_widget(form.imageFileName)}}
										</div>

									</div>
									<div class="col-12">
										<div class=" mt-3 col-6">
											<button type="submit" class="btn btn-info btn-block text-uppercase">Modifier le produit</button>
										</div>
									</div>
									{{form_end(form)}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
