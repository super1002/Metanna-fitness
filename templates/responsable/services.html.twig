{% extends "base.html.twig" %}

{% block title %}Traçage du service
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<style>
		body {
			overflow: hidden;
		}
		th {
			color: #000;
			text-align: center;
		}
		td,
		th {
			text-align: center !important;
			vertical-align: unset !important;
		}
		.table-responsive {
			height: 75vh;
			overflow: auto;
			width: 95%;
			margin-left: 50px
		}
		.header {
			position: sticky;
			top: 0;
		}

		.profil {
			width: 100px;
			height: 100px;
			border-radius: 10px
		}
		/* .thumbnail:hover {
			position: absolute;
			top: 30%;
			left: 50%;
			width: 300px;
			height: auto;
		} */
	</style>
{% endblock %}
{% block body %}
	<div class="content-wrapper" class="d-flex flex-column">
		<h1 class="text-center mt-5 fw-bold">Activités des responsables</h1>

		<div class=" py-5">
			<div
				class="mx-auto rounded">

				<div class="table-responsive">
					<table class="table table-hover">
						<thead class="thead-light">
							<tr>
								<th class="header" scope="col">Code responsable</th>
								<th class="header" scope="col">Nom</th>
								<th class="header" scope="col">Prénom(s)</th>
								<th class="header" scope="col">Téléphone</th>
								<th class="header" scope="col">Email</th>
								<th class="header" scope="col">Début du service</th>
								<th class="header" scope="col">Fin du service</th>
							</tr>
						</thead>
						<tbody>
							{% for service in services %}
								<tr>
									<th scope="row">{{service.responsable.id}}</th>
									<td>{{service.responsable.nom}}</td>
									<td>{{service.responsable.prenom}}</td>
									<td>{{service.responsable.telephone}}</td>
									<td>{{service.responsable.email}}</td>
									<td>{{service.startOfService|localizeddate('long', 'medium', 'fr')}}</td>
									{% if service.endOfService is not null %}
										<td>{{service.endOfService|localizeddate('long', 'medium', 'fr')}}</td>
									{% else %}
										<td>ND</td>
									{% endif %}
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<!-- End -->
			</div>
		</div>
	</div>

	{% include "layouts/_footer.html.twig" %}
</div></div>{% endblock %}
