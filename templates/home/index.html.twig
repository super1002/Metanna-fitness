{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<style>
		body {
			overflow: hidden;
		}
		.homepage {
			background: url('../img/home.jpg') no-repeat center;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
			--homepage-text-size: 30px;
		}
		.homepage-head {
			font-family: 'Lobster';
			color: #fff;
			font-size: 200%;
			font-size: calc(26px +(80 - 26) *((100vw - 400px) /(1980 - 400)));

		}
		.homepage-container {
			display: flex;
			justify-content: center;
			height: 80vh;
			position: relative;
			top: 200px;
		}
	</style>

{% endblock %}

{% block body %}
	<div class="content-wrapper homepage">
		<div class="content-header">
			<div class="homepage-container">
				<div class="">
					<div class="homepage-head">Bienvenue chez Metanna Fitnesss</div>
				</div>
			</div>
		</div>
	</div>
	<footer class="main-footer text-center">
		<strong>Copyright &copy; 2021
			<a href="https://adminlte.io">AdminLTE.io | Kuro</a>.</strong>All rights reserved.
	</footer>

{% endblock %}
